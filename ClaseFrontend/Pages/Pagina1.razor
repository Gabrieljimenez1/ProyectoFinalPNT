@page "/paginaclase"
<MudText Class="mb-8">           Actions on the current page</MudText>
<MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="OnButtonClicked" >Essay</MudButton>
@code {
    [Inject] private IDialogService DialogService { get; set; }
    [Inject] private ISnackbar SnackBarService {get;set;}

    string state = "Message box hasn't been opened yet";

    private async void OnButtonClicked()
    {

        bool? result = await DialogService.ShowMessageBox(
            "Essay `How is going to be my life in 20 years`", 
            "you will find the essay in the attached folder of the mail", 
            yesText:"See Essay!", cancelText:"Non See Essay");
        state= result==null ? "B" : "A!";
        StateHasChanged();
    }
}
